<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp"
    android:backgroundTint="@color/main_color"
    tools:context=".AboutUsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- App Logo -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/logo1"
            android:contentDescription="App Logo"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <!-- App Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Rerng App"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#FF5722"
            android:layout_marginBottom="12dp" />

        <!-- App Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rerng is your ultimate app for exploring, discovering, and reviewing movies. Stay updated with top-rated, trending, and upcoming films, and create a personalized watchlist!"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:padding="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BDBDBD"
            android:layout_marginVertical="16dp" />

        <!-- Developer Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meet the Developer"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#FF5722"
            android:layout_marginBottom="8dp" />

        <!-- Developer Info -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I am Soeurm Ravit, a fourth-year student at the Royal University of Phnom Penh (RUPP), pursuing a degree in Information Technology Engineering. With a strong passion for technology and innovation, I specialize in Android mobile development."
            android:textSize="16sp"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:padding="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BDBDBD"
            android:layout_marginVertical="16dp" />

        <!-- Contact Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Me"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#FF5722"
            android:layout_marginBottom="8dp" />

        <!-- Facebook -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_facebook"
                android:contentDescription="Facebook Icon"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvFacebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="facebook.com/Vid"
                android:textColor="#3b5998"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_email"
                android:contentDescription="Email Icon"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="vitra1812@gmail.com"
                android:textSize="16sp"
                android:textColor="#3b5998" />
        </LinearLayout>

        <!-- Phone -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_phone"
                android:contentDescription="Phone Icon"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+855 88 964 6724"
                android:textSize="16sp"
                android:textColor="#3b5998" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BDBDBD"
            android:layout_marginVertical="16dp" />

        <!-- Footer -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thank you for using Rerng App! ðŸŽ¬"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:padding="8dp" />
    </LinearLayout>
</ScrollView>
